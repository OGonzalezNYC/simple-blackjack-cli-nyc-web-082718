def hit?(card_total)
  prompt_user
  get_user_input
  if get_user_input == "h"
    deal_card
    card_total = card_total + deal_card
  else get_user_input != "h" && get_user_input != "s"
    invalid_command
    prompt_user
  end 
  card_total
end


def runner
  welcome 
  card_total = initial_round
  until card_total > 21
    hit?(card_total)
    display_card_total(card_total)
    card_total
  end
  end_game
end